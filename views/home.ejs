<html>
    <head>
        <title>
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/2700f32019.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
        <body>
            <h1 id="page-heading">
                <i class="fas fa-address-book"></i>
                My Contacts List
            </h1>

            <div id="contacts-list-container">
                <ul>
                    <% for (let i of contact_list){ %> 
                        <li class="contact">
                            <div class="details">
                                <p><%= i.name %></p>
                                <p><%= i.phone %></p>
                            </div>
                            <div class="delete-button">
                               
                               
                                <a href="/delete-contact/?id=<%= i._id %>">
                                    <!-- <a href="/delete-contact/?phone=<%=i.phone %>"> -->
                                    <i class="fas fa-window-close"></i>
                                </a>
                            </div>
        
                        </li>
                    <% } %>
                </ul>
            </div>
            <form action="/create-contact" method="POST">
                <input type="text" name="name" placeholder="Enter Name" required>
                <input type="text" name="phone" placeholder="Enter Phone" required>

                <button type="submit">Add Contacts</button>
            </form>
            <script type="text/javascript" src="/js/home.js"></script>
        </body>
    </head>
</html>